@using HiddenVilla_Server.Model 

<div class="bg-light border p-2 col-5 offset-1" @onclick="(args)=> AmenityClickSelectionChanged(args,Amenitie.Name)">
    <h4 class="text-secondary">Amenities - @Amenitie.ID</h4>

    @Amenitie.Name
    <br />
    @Amenitie.Description
</div>

@code {
    [Parameter]
    public BlazorAmenities Amenitie { get; set; }

    [Parameter]
    public EventCallback<string> onAmenityClickSelection { get; set; }

    protected async Task AmenityClickSelectionChanged(MouseEventArgs e, string name)
    {
        await onAmenityClickSelection.InvokeAsync(name);
    }

}
